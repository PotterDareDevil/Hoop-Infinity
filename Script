local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Hoop Infinity Aimbot", "Ocean")

--MAIN
local Tab = Window:NewTab("Aimbot")
local Section = Tab:NewSection("Press Q for Aimbot")
Section:NewButton("Aimbot", "Press this to enable Aimbot", function()
game:GetService("UserInputService").InputBegan:Connect(function(i, gpe)
if not gpe and i.KeyCode == Enum.KeyCode.Q then --Change Keycode letter to whichever key you want to make the script shoot
keypress(0x45)
wait(0.667)
keyrelease(0x45)
end
end)
end)

--Credits
Section:NewDropdown("Credits", {"Creator: PotterDareDevil", "Library: Kavo Library"}, function(currentOption)
    print(currentOption)
end)
